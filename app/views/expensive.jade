include ./layouts/header.jade

style.
  table, th, td {
  border: 1px solid black;}

div.container-fluid.page-wrap
  div.row
    div.col-md-10.col-md-offset-1
      h1.Title.text-center #{message}
      div.row
        div.col-md-6.col-md-offset-3.text-center
          | <br>
          table 
            thead
              tr
                th Program Type
                th Term
                th Price
                th Name 
                th Program Id
            tbody
              each row, i in programs
                tr
                  td
                    =row.programType
                  td
                    =row.term
                  td
                    =row.price
                  td
                    =row.name
                  td
                    =row.programId
          | <br>
          a(href="../expensive/most") Most Expensive Programs <br>
          a(href="../expensive/least") Least Expensive Programs
          | <br>
                    
                          
include ./layouts/footer.jade
