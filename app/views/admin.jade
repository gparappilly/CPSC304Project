include ./layouts/header.jade

style.
  table, th, td {
  border: 1px solid black;}


div.container-fluid.page-wrap
  div.row
    h1.Title.text-center Admin Console
    div.col-md-6.col-md-offset-3
      div.All-Classes
        h3.Title Activities
        table
          thead
            tr
              th Program
              th Type
              th ProgramId
              th Price
          tbody
            each row in programs
              tr
                td
                  = row.name
                td
                  = row.programType
                td
                  = row.programId
                td
                  = row.price
                td  <form method="post" action="/adminDropProgram"><button type="submit" name="submit" value="#{row.programId}">Drop</button></form>

      div.All-locations
        h3.Title Locations
        table
          thead
            tr
              th Location
              th Capacity
              th Address
          tbody
            each row in locations
              tr
                td
                  = row.name
                td
                  = row.capacity
                td
                  = row.address
                td  <form method="post" action="/adminDropLocation"><button type="submit" name="submit" value="#{row.name}">Drop</button></form>
      div.All-users
        h3.Title Users
        table
          thead
            tr
              th Name
              th Email
              th User Id
          tbody
            each row in users
              tr
                td
                  = row.name
                td
                  = row.email
                td
                  = row.userId
                td  <form method="post" action="/adminDeleteUser"><button type="submit" name="submit" value="#{row.userId}">Drop</button></form>
      div.All-instructors
        h3.Title Instructors
        table
          thead
            tr
              th Name
              th User Id
          tbody
            each row in instructors
              tr
                td
                  = row.name
                td
                  = row.userId
                td  <form method="post" action="/adminDeleteUser"><button type="submit" name="submit" value="#{row.userId}">Drop</button></form>
      p.

include ./layouts/footer.jade
